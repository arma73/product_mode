root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
max_line_length = 100
trim_trailing_whitespace = true

[*.{js,jsx,ts,tsx}]
file_type = jsx
trim_trailing_whitespace = true

[*.styl]
indent_size = 4
indent_style = space

[*.yml]
indent_size = 2
indent_style = space

[*.md]
max_line_length = 0
trim_trailing_whitespace = false

[package.json]
indent_size = 2
indent_style = space

[COMMIT_EDITMSG]
max_line_length = 0